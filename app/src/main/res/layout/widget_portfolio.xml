<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconTrend"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_trend_up"
            tools:tint="@color/trend_up_light" />

        <TextView
            android:id="@+id/textValuationPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="123 %"
            android:lines="1"
            android:ellipsize="end"
            android:layout_gravity="start"
            tools:textColor="@color/trend_up_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/textValuationFiat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingStart="16dp"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:gravity="start"
        tools:text="1 000 000 Kč"/>

    <TextView
        android:id="@+id/textValuationBtc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondary"
        android:lines="1"
        android:ellipsize="end"
        android:paddingStart="16dp"
        android:textSize="14sp"
        android:gravity="start"
        tools:text="1 000 000 BTC"/>


</LinearLayout>