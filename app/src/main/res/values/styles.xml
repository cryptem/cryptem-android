<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Card">
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Normal</item>
    </style>

    <style name="Card.Clickable">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="OutlinedButton.Light">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ImageButton.Red" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/delete</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ImageButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="ImageButton.Circle" parent="ImageButton.Outlined">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="RadioButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:textColor">@color/bottom_bar_icon_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShapeAppearanceOverlay.Normal" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_radius</item>
    </style>

</resources>